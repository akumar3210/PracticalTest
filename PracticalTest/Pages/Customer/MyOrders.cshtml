@page
@model PracticalTest.Pages.Customer.MyOrdersModel
<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Order Total</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.OrderTotal</td>
                <td>
                    <a asp-page="/Customer/OrderDetails" asp-route-id="@order.OrderId">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
